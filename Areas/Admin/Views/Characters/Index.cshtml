@model IEnumerable<FighteR_PG.Models.Character>

@{
    ViewData["Title"] = "Personagens ";
}

<table style="clear: both; width: 100%; margin: auto; border: 1px solid #353535; margin-top:0.5em;">
    <tbody>
        <tr>
            <td>
                <h1>Personagens</h1>
            </td>
        </tr>
        <tr>
            <td style="padding: 0.2em 0.5em; background-color: #353535;">
                @foreach (var item in Model)
                {
                    <span style="text-align:center; float:left; margin-top: 5px; margin-right: 5px;">
                        <a asp-action="Details" asp-route-id="@item.CharacterId"><img src="@Html.DisplayFor(modelItem => item.Icon)" width="200" height="200"></a>
                        <div style="line-height:1; text-align:center; font-size:1.0em; width:70px; height:2.2em; margin:auto">
                            <a asp-action="Details" asp-route-id="@item.CharacterId">  @Html.DisplayFor(modelItem => item.Name)</a>
                        </div>
                        <div class="buttons">
                            <a asp-action="Edit" asp-route-id="@item.CharacterId" class="btn btn-warning">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.CharacterId" class="btn btn-danger">Deletar</a>
                        </div>
                    </span>
                }
            </td>
        </tr>
</table>

<br />

<p>
    <a asp-action="Create" class="btn btn-primary">Criar</a>
    <a asp-area="admin" asp-controller="AdminHome" asp-action="Index" class="btn btn-secondary">Voltar</a>
</p>

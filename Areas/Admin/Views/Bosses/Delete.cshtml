@model FighteR_PG.Models.Boss

@{
    ViewData["Title"] = "Deletar ";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar?</h3>
<div>
    <h4>Chefe</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
           <img src="@Html.DisplayFor(model => model.Image)" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Region)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Region)
        </dd>
        <dt class = "col-sm-2">
           @Html.DisplayNameFor(model => model.RegionImage) 
        </dt>
        <dd class = "col-sm-10">
           <img src=" @Html.DisplayFor(model => model.RegionImage)"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GerneralText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GerneralText)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tier.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex.SexCharacter)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="BossId" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index"  class="btn btn-secondary">Voltar</a>
    </form>
</div>

@model FighteR_PG.Models.Team

<div>
    <h1>Time</h1>
    <table style="table-layout: fixed; width: 100%;">
                <tr>
                    <th colspan="12" style="font-weight:bold">@Model.Name</th>
                </tr>
                <tr>
                @foreach(TeamMember member in Model.Members)
                {
                                <td style="text-align:center" colspan="4">
                                            <a asp-controller="Character" asp-action="Details" asp-route-Id="@member.Character.CharacterId"><img src="@Html.DisplayFor(x => member.Character.Icon)" width="80" height="80"/></a>
                                        <br/>
                                                <a asp-controller="Character" asp-action="Details" asp-route-Id="@member.Character.CharacterId">@member.Character.Name</a>
                                </td>
                }

                </tr>
                <tr>
                    <td style="text-align:center" colspan="12">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="TeamId" />
                            <input type="submit" value="Deletar" class="btn btn-danger" />
                             <a asp-controller="Team" asp-action="Index" class="btn btn-secondary">Voltar</a>
                        </form>
                       
                    </td>
                </tr>
                <tr> <td colspan="12"><br></td></tr>
    </table>
</div>
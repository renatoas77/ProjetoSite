@model List<Team>

<div>
    <h1>Meus times</h1>
    <table style="table-layout: fixed; width: 100%;">
        @foreach(Team team in Model)
        { 

            <tr>
                <th colspan="12" style="font-weight:bold">@team.Name</th>
            </tr>
            <tr>
                @for(int i = 0; i < team.Members.Count();i++)
                {
                        <td style="text-align:center" colspan="4">
                                <a asp-controller="Character" asp-action="Details" asp-route-Id="@team.Members[i].Character.CharacterId"><img src="@Html.DisplayFor(x => team.Members[i].Character.Icon)" width="80" height="80"/></a>
                                <br/>
                                <a asp-controller="Character" asp-action="Details" asp-route-Id="@team.Members[i].Character.CharacterId">@team.Members[i].Character.Name</a>
                        </td>
                }
                     
            </tr>
                    <tr><td style="text-align:center" colspan="12"><a asp-controller="Team" asp-action="Delete" asp-route-id="@team.TeamId" class="btn btn-danger">Deletar</a></td>
            </tr>
            <tr> <td colspan="12"><br></td></tr>
        }
    </table>
</div>

